{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug",
      "configurations": [
        "Debug Client",
        "Debug Server"
      ]
    }
  ],
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Client",
      "url": "http://localhost:10001",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/public",
      //"preLaunchTask": "Huncwot: Client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Huncwot: Server",
      "program": "${workspaceFolder}/node_modules/huncwot/cli.js",
      "args": [
        "server"
      ],
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Server",
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}
