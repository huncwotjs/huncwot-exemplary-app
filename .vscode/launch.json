{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Huncwot: Start",
      "configurations": [
        "Huncwot: Client",
        "Huncwot: Server"
      ]
    }
  ],
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:10001",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/public",
      "preLaunchTask": "Huncwot: Client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Huncwot: Server",
      "program": "${workspaceFolder}/node_modules/huncwot/cli.js",
      "args": [
        "server"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Huncwot: Client",
      "program": "${workspaceFolder}/node_modules/huncwot/cli.js",
      "args": [
        "client"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      //"preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
