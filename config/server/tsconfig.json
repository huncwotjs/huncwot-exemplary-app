{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "outDir": "../../dist",
    "rootDir": "../../",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "../..",
    "paths": {
      "*": [
        "features/*",
        "tasks/*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": [
          "*"
        ]
      }
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "../../features/**/Controller/**.ts",
    "../../features/**/Service/**.ts"
  ]
}
